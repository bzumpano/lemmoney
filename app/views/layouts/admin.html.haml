!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title= t('app.title')
    = csrf_meta_tags
    = csp_meta_tag

    = stylesheet_link_tag 'admin', media: 'all'
    = yield(:stylesheet)

  %body
    = render 'admin/navbar'

    .container
      - if notice.present?
        .alert.alert-dismissible.fade.show.alert-success{ role: :alert }
          %button{ type: :button, class: :close, data: { dismiss: :alert } }
            %span= raw '&times;'
          = notice

      - if alert.present?
        .alert.alert-dismissible.fade.show.alert-danger{ role: :alert }
          %button{ type: :button, class: :close, data: { dismiss: :alert } }
            %span= raw '&times;'
          = alert


      = yield

    = javascript_include_tag(:admin)
    = yield(:javascript)

